set(output-directory = "build")

java-jar(
  name = "Echo"
  source = all-files("source"))

java-jar(
  name = "EchoTest"
  source = all-files("tests/source")
  library = [
    "Echo"
    "junit"
  ])

junit(
  name = "EchoTestResult"
  test-jar = "EchoTest"
  target-jar = "Echo"
  main-class = "main.AllTests")

java-run(
  jar = "Echo"
  input = "Hello, World")
